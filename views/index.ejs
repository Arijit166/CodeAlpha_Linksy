    .suggestions-list { 
      padding: 12px; 
      display: flex; 
      flex-direction: column; 
      gap: 12px; /* Increased gap for comfortable spacing */
      overflow-y: auto; /* This will scroll when content exceeds height */
      flex: 1;
      scrollbar-width: thin;
      scrollbar-color: var(--primary) var(--surface);
