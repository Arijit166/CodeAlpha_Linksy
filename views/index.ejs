    .follow-btn {
      padding: 8px 16px; 
      border-radius: 20px; 
      font-size: 13px; 
      font-weight: 700; 
      cursor: pointer; 
      border: 1px solid var(--border);
      background: var(--primary); 
      color: #fff; 
      transition: all .3s ease;
      position: relative;
      overflow: hidden;
