    .suggestions-title { 
      font-size: 18px; 
      font-weight: 800; 
      letter-spacing: -0.3px;
      background: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
