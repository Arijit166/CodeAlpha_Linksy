      transition: all 0.2s ease;   /* Smooth hover transition */
    }

    .follow-btn.following:hover {
      background: var(--surface-hover); /* Dark hover background */
      transform: translateY(-1px);
      outline: none; /* Ensure no outline on hover/focus */
