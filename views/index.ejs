    .suggestion-item {
      display: flex; 
      align-items: center; 
      justify-content: space-between;
      gap: 12px; 
      padding: 16px; /* Increased padding for comfort */
      border-radius: 12px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      flex-shrink: 0; /* Prevent shrinking */
